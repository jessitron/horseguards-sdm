{
  "compilerOptions": {
    "newLine": "LF",
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "React",
    "declaration": true,
    "sourceMap": true,
    "lib": [
      "DOM",
      "es2017",
      "DOM.Iterable",
      "ScriptHost",
      "esnext.asynciterable"
    ],
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "bin/*.ts",
    "lib/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    ".#*",
    "../../atomist/**/*.ts",
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}